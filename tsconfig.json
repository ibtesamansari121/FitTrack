// tsconfig.json
{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@lib/*": ["src/lib/*"],
      "@store/*": ["src/store/*"],
      "@screens/*": ["src/screens/*"],
      "@navigation/*": ["src/navigation/*"]
    }
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}
